--[[  
Paste this into the command bar in Play mode OR inject with loadstring() in a LocalScript.
It makes you tween behind the *closest* killer while holding T.
--]]

local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer or Players:GetPlayers()[1] -- fallback for command bar
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- List of killer names
local killers = { "Jason", "c00lkidd", "JohnDoe", "1x1x1x1", "Noli", "Slasher" }

local holdingT = false
local activeTween

-- Find the *closest* killer with a HumanoidRootPart
local function getClosestKiller()
	local closest, shortestDist
	for _, name in ipairs(killers) do
		local killer = workspace:FindFirstChild(name)
		if killer and killer:FindFirstChild("HumanoidRootPart") then
			local killerHRP = killer.HumanoidRootPart
			local dist = (killerHRP.Position - humanoidRootPart.Position).Magnitude
			if not shortestDist or dist < shortestDist then
				shortestDist = dist
				closest = killer
			end
		end
	end
	return closest
end

-- Tween behind killer
local function tweenBehindKiller(killer)
	if not killer then return end
	local killerHRP = killer:FindFirstChild("HumanoidRootPart")
	if not killerHRP then return end

	-- 5 studs behind killer
	local offset = -killerHRP.CFrame.LookVector * 5
	local targetPosition = killerHRP.Position + offset

	-- Face same way as killer
	local targetCFrame = CFrame.new(targetPosition, targetPosition + killerHRP.CFrame.LookVector)

	-- Cancel any previous tween
	if activeTween then activeTween:Cancel() end

	local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
	activeTween = TweenService:Create(humanoidRootPart, tweenInfo, {CFrame = targetCFrame})
	activeTween:Play()
end

-- Input handlers
UserInputService.InputBegan:Connect(function(input, gp)
	if gp then return end
	if input.KeyCode == Enum.KeyCode.T then
		holdingT = true
	end
end)

UserInputService.InputEnded:Connect(function(input)
	if input.KeyCode == Enum.KeyCode.T then
		holdingT = false
		if activeTween then activeTween:Cancel() end
	end
end)

-- Update loop
RunService.RenderStepped:Connect(function()
	if holdingT then
		local killer = getClosestKiller()
		if killer then
			tweenBehindKiller(killer)
		end
	end
end)

print("âœ… Closest-killer dash script injected!")
